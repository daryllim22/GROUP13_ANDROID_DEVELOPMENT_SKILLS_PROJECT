<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:text="Reset Account"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgotEmailTextField"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/resetPasswordBtn"
        android:layout_width="321dp"
        android:layout_height="42dp"
        android:layout_marginTop="250dp"
        android:text="Proceed"
        app:layout_constraintEnd_toEndOf="@+id/forgotEmailTextField"
        app:layout_constraintStart_toStartOf="@+id/forgotEmailTextField"
        app:layout_constraintTop_toBottomOf="@+id/forgotEmailTextField" />

    <TextView
        android:id="@+id/usernameTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Try to think of your email"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/forgotEmailTextField"
        app:layout_constraintEnd_toEndOf="@+id/forgotEmailTextField"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/forgotEmailTextField" />

</androidx.constraintlayout.widget.ConstraintLayout>
